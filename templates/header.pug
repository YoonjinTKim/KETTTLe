                        if logged_in
                            li(class='nav-item')
                                a(class='nav-link' + (upload ? ' active' : '') href='/upload') Upload

                            li(class='nav-item')
                                a(class='nav-link' + (jobslist ? ' active' : '') href='/jobs') Jobs

                            li(class='nav-item')
                                a(class='nav-link' href='/api/users/logout') Logout
                        else
                            li(class='nav-item')
                                a(class='nav-link' + (login ? ' active' : '') href='/login') Log In

                            li(class='nav-item')
                                a(class='nav-link' + (register ? ' active' : '') href='/register') Register
        block content
