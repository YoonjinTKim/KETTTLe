extends header

block content
    div(class='center wrapper')
        h1 Register
        form(action = '/api/users' method = 'POST')
            if exists
                div(class='alert alert-danger')
                  strong Account already exists, try another email address
            else if mismatch
                div(class='alert alert-danger')
                  strong Confirmation password does not match
            input(type='email' name='email' autocomplete='username' placeholder='Email address' required)
            br

            input(type='text' name='affiliation' autocomplete='affiliation' placeholder='Affiliation' required)
            br

            input(id='password' type='password' name='password' autocomplete='new-password' placeholder='Password' required)
            br

            input(id='confirmed_password' type='password' name='confirmed_password' autocomplete='new-password' placeholder='Confirm Password' required)
            br

            button(class='btn btn-primary btn-block' type='submit') Register