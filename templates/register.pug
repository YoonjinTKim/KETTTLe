extends header

block content
    div(class='container wrapper')
        div(class='row')
            div(class='col-lg-12 text-center')
                h1(style='font-weight:bold') Register
                form(action = '/api/users' method = 'POST')
                    if exists
                        div(class='alert alert-danger')
                          strong Account already exists, try another email address
                    else if mismatch
                        div(class='alert alert-danger')
                          strong Confirmation password does not match

                    div(class='form-group')
                        input(class='form-control' type='email' name='email' autocomplete='username' placeholder='Email address' required)

                    div(class='form-group')
                        input(class='form-control' type='text' name='affiliation' autocomplete='affiliation' placeholder='Affiliation' required)

                    div(class='form-group')
                        input(class='form-control' id='password' type='password' name='password' autocomplete='new-password' placeholder='Password' required)

                    div(class='form-group')
                        input(class='form-control' id='confirmed_password' type='password' name='confirmed_password' autocomplete='new-password' placeholder='Confirm Password' required)

                    div(class='form-group')
                        button(class='btn btn-primary btn-block' type='submit') Register
    footer(class='footer' style='background-image:url(/public/dna.jpg);')
